	keywords = {Behavioural ecology, Climate-change ecology, Ecosystem ecology},
	pages = {4013},
	file = {Full Text PDF:C\:\\Users\\Debly-A\\Zotero\\storage\\ARIZTMIA\\Deldicq et al. - 2021 - Effects of temperature on the behaviour and metabo.pdf:application/pdf},
}

@article{rigaud_transient_2018,
