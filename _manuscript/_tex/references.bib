	number = {6},
	journal = {Limnology and Oceanography},
	author = {Paterson, D.M. and Wiltshire, K.H. and Miles, A. and Blackburn, J. and Davidson, I. and Yates, M.G. and McGrorty, S. and Eastwood, J.A.},
