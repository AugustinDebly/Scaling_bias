	author = {Curcio, A.C. and Barbero, L. and Peralta, G.},
	year = {2023},
	note = {Publisher: MDPI},
	keywords = {hyperspectral, Remote sensing, Hyperspectral imaging, Vegetation, Ecosystems, Vegetation species, Wetlands, Second derivatives, Sea level, Spectral signature, Aerial vehicle, Antennas, Barium compounds, coastal marsh, Coastal marsh, continuum removal, Continuum removal, HyperSpectral, Image resolution, Population distribution, second derivative transformation, Second derivative transformation, spectral signatures, Unmanned aerial vehicle, unmanned aerial vehicle (UAV), Unmanned aerial vehicles (UAV), vegetation species discrimination, Vegetation species discrimination},
