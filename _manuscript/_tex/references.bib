	keywords = {Microphytobenthos, phytobenthos, patchiness, spatial distribution, coastal zone, feeding behavior, Temperature, behavioral response, Feeding behavior, Golden gray mullets, Grazing, juvenile, mesocosm, Spatial variance, swimming, teleost, water temperature},
